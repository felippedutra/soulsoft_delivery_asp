@model IEnumerable<soulsoft_delivery_asp.Models.TipoProdutoApiModel>

@{
    ViewData["title"] = "Tipos de Produtos";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Listagem de Tipos de Produtos</h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Pesquisar">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                            <a asp-controller="TiposProdutos" asp-action="CreateOrEdit" class="btn btn-primary">Novo Tipo de Produto</a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table id="example2" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Descrição</th>
                            <th>Ativo?</th>
                            <th>Opções</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nome)
                                </td>
                                <td>
                                    @if (item.Ativo == true)
                                    {
                                        <i class="fa fa-check text-success"></i>
                                    }
                                    else
                                    {
                                        <i class="fa fa-times text-danger"></i>
                                    }
                                </td>
                                <td>
                                    <a class="btn btn-secondary btn-sm" asp-controller="TiposProdutos" asp-action="CreateOrEdit" asp-route-id="@item.Id"><i class="fa fa-pencil-alt"></i></a>
                                    <a class="btn btn-danger btn-sm" asp-controller="TiposProdutos" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Deseja remover o Tipo de Produto selecionado?')"><i class="fa fa-trash-alt"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>#</th>
                            <th>Descrição</th>
                            <th>Ativo?</th>
                            <th>Opções</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->
