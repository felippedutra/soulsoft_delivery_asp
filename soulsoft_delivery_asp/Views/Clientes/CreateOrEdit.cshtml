@model soulsoft_delivery_asp.Models.ClienteApiModel

@{
    ViewData["breadcrumb"] = "Clientes";
    ViewData["breadcrumb_url"] = "/Clientes/Index";
    ViewData["title"] = "Cadastrar";
}

<div class="row">
    <!-- left column -->
    <div class="col-md-12">
        <!-- jquery validation -->
        <div class="card card-secundary">
            <div class="card-header">
                <h3 class="card-title">Dados do Usuário</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form method="post" asp-controller="Clientes" asp-action="CreateOrEdit">
                <div class="card-body">
                    <input type="hidden" name="Id" id="Id" asp-for="Id">
                    <div class="form-group">
                        <label for="nome">Nome</label>
                        <input type="text" asp-for="Nome" class="form-control" id="nome" placeholder="Digite o nome completo">
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="telefone">Telefone</label>
                        <input type="text" asp-for="Telefone" class="form-control telefone" id="telefone" placeholder="Digite o Telefone">
                        <span asp-validation-for="Telefone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" asp-for="Email" class="form-control" id="email" placeholder="Digite o Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="senha">Senha</label>
                        <input type="text" asp-for="Senha" class="form-control senha" id="senha" placeholder="Digite a Senha">
                        <span asp-validation-for="Senha" class="text-danger"></span>
                    </div>
                    @*<div class="form-group mb-0">
                        <label for="situacao">Situação</label>
                        <select asp-for="situacao" class="form-control" id="situacao">
                            <option></option>
                            <option value="Ativo">Ativo</option>
                            <option value="Inativo">Inativo</option>
                        </select>
                        <span asp-validation-for="situacao" class="text-danger"></span>
                    </div>*@
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Salvar</button>
                    <a href="#" class="btn btn-danger">Cancelar</a>
                </div>
            </form>
        </div>
        <!-- /.card -->
    </div>
    <!--/.col (left) -->
</div>
<!-- /.row -->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}