@{
    ViewData["breadcrumb"] = "Produtos";
    ViewData["breadcrumb_url"] = "/Produtos/Index";
    ViewData["title"] = "Cadastrar";
}

<div class="row">
    <!-- left column -->
    <div class="col-md-12">
        <!-- jquery validation -->
        <div class="card card-secundary">
            <div class="card-header">
                <h3 class="card-title">Dados do Usuário</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form method="post" asp-controller="Produtos" asp-action="CreateOrEdit">
                <div class="card-body">
                    <input type="hidden" name="id" value="">
                    <div class="form-group">
                        <label for="nome">Nome</label>
                        <input type="text" name="nome" class="form-control" placeholder="Digite o nome do Produto">
                    </div>
                    <div class="form-group">
                        <label for="telefone">Descrição</label>
                        <input type="text" name="descricao" class="form-control" placeholder="Digite a Descrição">
                    </div>
                    <div class="form-group">
                        <label for="tipo_produto">Tipo de Produto</label>
                        <select name="tipo_produto" class="form-control">
                            <option value="0">Selecione</option>
                            <option value="1">Tipo 1</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="tipo_medida">Tipo de Medida</label>
                        <select name="tipo_medida" class="form-control">
                            <option value="0">Selecione</option>
                            <option value="1">Tipo 1</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="email">Quantidade</label>
                        <input type="number" name="quantidade" class="form-control" placeholder="Digite a Quantidade">
                    </div>
                    <div class="form-group">
                        <label for="senha">Valor</label>
                        <input type="text" name="valor" class="form-control" placeholder="Digite o Valor">
                    </div>
                    <div class="form-group mb-0">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" name="ativo" class="custom-control-input" id="ativo">
                            <label class="custom-control-label" for="ativo">Ativo?</label>
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Salvar</button>
                    <a href="#" class="btn btn-danger">Cancelar</a>
                </div>
            </form>
        </div>
        <!-- /.card -->
    </div>
    <!--/.col (left) -->
    <!-- right column -->
    <div class="col-md-6">

    </div>
    <!--/.col (right) -->
</div>
<!-- /.row -->
